{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/bebrilli.myshopify.com/collections/configure/142123/edit
{% endcomment %}
{% if collection.metafields.custom_fields["benefit_collection_icons"] != blank %}
  <div class="custom-field custom-field__benefit-collection-icons custom-field__type--field-collection">
    <h3 class="custom-field--title">Benefit Collection Icons</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign benefit_collection_icon_label_array = collection.metafields.custom_fields["benefit_collection_icon_label"] | split: separator %}
      {% assign benefit_collection_icon_image_array = collection.metafields.custom_fields["benefit_collection_icon_image"] | split: separator %}
      {% assign fc_keys = collection.metafields.custom_fields["benefit_collection_icons"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__benefit-collection-icon-label">
            {{ benefit_collection_icon_label_array[index] }}
          </div>
          <div class="fc-field field__benefit-collection-icon-image">
            {{ benefit_collection_icon_image_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}