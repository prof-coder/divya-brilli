  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/bebrilli.myshopify.com/collections/configure/143280/edit
{% endcomment %}
{% if collection.metafields.custom_fields["collection_testimonials"] != blank %}
  <div class="custom-field custom-field__collection-testimonials custom-field__type--field-collection">
    <h3 class="custom-field--title">Collection Testimonials</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign testimonial_body_array = collection.metafields.custom_fields["testimonial_body"] | split: separator %}
      {% assign testimonial_name_array = collection.metafields.custom_fields["testimonial_name"] | split: separator %}
      {% assign fc_keys = collection.metafields.custom_fields["collection_testimonials"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__testimonial-body">
            {{ testimonial_body_array[index] }}
          </div>
          <div class="fc-field field__testimonial-name">
            {{ testimonial_name_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}