{% if product.metafields.custom_fields["requires_installation"] != blank %}
  <div class="custom-field custom-field__requires-installation custom-field__type--checkbox">
    <h3 class="custom-field--title">Requires Installation</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["requires_installation"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}